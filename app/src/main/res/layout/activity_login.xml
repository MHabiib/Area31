<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_blue_gradient_login">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/language"
            style="@style/spinnerTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_marginRight="@dimen/twelve_dp"
            android:backgroundTint="@color/white"
            android:popupBackground="@drawable/card_layout_white"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:paddingBottom="60dp">

                <Button
                    android:id="@+id/btn_login"
                    style="@style/NoCaps"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:background="@drawable/card_toscha"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/il_password_layout"
                    app:layout_constraintRight_toRightOf="@id/il_password_layout"
                    app:layout_constraintTop_toBottomOf="@id/tv_forgot_password" />

                <ImageView
                    android:id="@+id/iv_login_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/eight_dp"
                    android:indeterminateDrawable="@drawable/custom_progressbar"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/btn_login"
                    app:layout_constraintRight_toRightOf="@id/btn_login"
                    app:layout_constraintTop_toTopOf="@id/btn_login" />


                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/twelve_dp"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintRight_toRightOf="@id/il_password_layout"
                    app:layout_constraintTop_toBottomOf="@id/il_password_layout" />

                <TextView
                    android:id="@+id/tv_email_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_login_logo" />

                <TextView
                    android:id="@+id/tv_password_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:text="@string/password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/il_email_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twelve_dp"
                    app:layout_constraintLeft_toLeftOf="@id/btn_login"
                    app:layout_constraintRight_toRightOf="@id/btn_login"
                    app:layout_constraintTop_toBottomOf="@id/btn_login">

                    <TextView
                        android:id="@+id/tv_dont_have"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/don_t_have_an_account"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/four_dp"
                        android:text="@string/register"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintLeft_toRightOf="@id/tv_dont_have"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/il_email_layout"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/example_mail_com"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/il_password_layout"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_password_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:paddingBottom="60dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_forgot_password_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar_reset"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/eight_dp"
                    android:indeterminateDrawable="@drawable/custom_progressbar"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_forgot_password_first_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/iv_forgot_password_logo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forgot_password"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/h_medium2"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_your_email_and_we_ll_send_you_a_code_to_verify_you"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h3"
                        android:layout_gravity="center"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_email_reset_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/card_white"
                        android:paddingStart="@dimen/sixteen_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingEnd="@dimen/sixteen_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email_reset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/example_mail_com"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/h3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_submit"
                        style="@style/NoCaps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/card_toscha"
                        android:text="@string/submit"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_forgot_password_next_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/iv_forgot_password_logo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_reset_code"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/h_medium2"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_your_email_for_that_code"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h3"
                        android:layout_gravity="center"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_reset_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/card_white"
                        android:paddingStart="@dimen/sixteen_dp"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingEnd="@dimen/sixteen_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_reset_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/enter_the_code"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/h3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/four_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/didn_t_receive_code"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/h3"
                            android:layout_gravity="end"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/tv_resend_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/resend_code"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/h3"
                            android:layout_marginTop="@dimen/four_dp"
                            android:layout_gravity="end"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_submit_next_step"
                        style="@style/NoCaps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/card_toscha"
                        android:text="@string/submit"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    android:paddingBottom="60dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/iv_forgot_password_logo">

                    <Button
                        android:id="@+id/btn_new_password"
                        style="@style/NoCaps"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/card_toscha"
                        android:text="@string/change_password"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="@id/il_retype_new_password_layout"
                        app:layout_constraintRight_toRightOf="@id/il_retype_new_password_layout"
                        app:layout_constraintTop_toBottomOf="@id/il_retype_new_password_layout" />

                    <TextView
                        android:id="@+id/tv_new_password_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twelve_dp"
                        android:layout_marginTop="@dimen/twelve_dp"
                        android:text="@string/new_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_retype_new_password_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twelve_dp"
                        android:layout_marginTop="@dimen/twelve_dp"
                        android:text="@string/retype_new_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/il_new_password_layout" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_new_password_layout"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four_dp"
                        android:background="@drawable/card_white"
                        android:paddingStart="@dimen/sixteen_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingEnd="@dimen/sixteen_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_new_password_tag">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/h3" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_retype_new_password_layout"
                        android:layout_width="@dimen/zero_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four_dp"
                        android:background="@drawable/card_white"
                        android:paddingStart="@dimen/sixteen_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingEnd="@dimen/sixteen_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_retype_new_password_tag">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_retype_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/h3" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_back_to_login"
            style="@style/NoCaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/twelve_dp"
            android:layout_margin="@dimen/twelve_dp"
            android:textSize="@dimen/h2"
            android:background="@null"
            android:text="@string/back_to_login"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>