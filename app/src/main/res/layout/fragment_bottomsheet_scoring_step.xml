<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2F2F2F2">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_back"
                android:tint="@color/colorPrimaryLight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/twelve_dp"
                android:layout_marginTop="@dimen/twelve_dp"/>

            <TextView
                android:id="@+id/swipe_up_indicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/four_dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twelve_dp"
                android:visibility="invisible"
                android:background="@drawable/card_layout_grey"
                android:padding="@dimen/twenty_four_dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ib_back"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.30" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.40" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pattern"
                android:tint="@color/purple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/guideline"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pattern"
                android:tint="@color/purple_two"
                app:layout_constraintRight_toRightOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/guideline3" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_answer_essay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/twelve_dp"
                android:background="@drawable/card_white"
                android:paddingStart="@dimen/sixteen_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:paddingEnd="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/twelve_dp"
                app:layout_constraintTop_toBottomOf="@id/swipe_up_indicator">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/answer_essay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/your_answer"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:paddingBottom="@dimen/eight_dp"
                    android:textSize="@dimen/h3" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_answer_essay_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:background="@drawable/card_white"
                android:paddingStart="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/twelve_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:paddingEnd="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/twelve_dp"
                app:layout_constraintTop_toBottomOf="@id/layout_answer_essay">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/answer_essay_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/answer_key"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:paddingBottom="@dimen/eight_dp"
                    android:textSize="@dimen/h3" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_cousine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursine_similarity"
                app:layout_constraintTop_toBottomOf="@id/layout_answer_essay_student"
                android:layout_marginTop="@dimen/twelve_dp"
                android:gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_word_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:padding="@dimen/twelve_dp"
                android:background="@drawable/card_white"
                android:layout_marginRight="@dimen/twelve_dp"
                android:clipToPadding="false"
                app:layout_constraintHorizontal_bias="0.0"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/title_rv"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textColor="@color/darkGrey"
                app:layout_constraintBottom_toTopOf="@id/layout_p" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/eight_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                app:layout_constraintTop_toBottomOf="@id/rv_word_list">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/darkGrey"
                    app:layout_constraintLeft_toLeftOf="@id/tv_q_details"
                    app:layout_constraintRight_toRightOf="@id/tv_q_details"
                    app:layout_constraintTop_toTopOf="@id/tv_q_details"/>

                <TextView
                    android:id="@+id/tv_q_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/darkGrey"
                    android:layout_weight="0.75"
                    android:textStyle="italic"
                    android:textSize="@dimen/h4"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="q"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/darkGrey"
                    android:textStyle="italic"
                    android:textSize="@dimen/h4"
                    android:layout_marginLeft="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_q_details"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/rasio_kemunculan_kata_pada_kalimat_kunci_jawaban"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                app:layout_constraintTop_toBottomOf="@id/layout_p">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/darkGrey"
                    app:layout_constraintLeft_toLeftOf="@id/tv_p_details"
                    app:layout_constraintRight_toRightOf="@id/tv_p_details"
                    app:layout_constraintTop_toTopOf="@id/tv_p_details"/>

                <TextView
                    android:id="@+id/tv_p_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/darkGrey"
                    android:layout_weight="0.75"
                    android:textStyle="italic"
                    android:textSize="@dimen/h4"
                    android:layout_marginLeft="@dimen/twenty_four_dp"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="p"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/darkGrey"
                    android:textStyle="italic"
                    android:textSize="@dimen/h4"
                    android:layout_marginLeft="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/twenty_four_dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_p_details"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/rasio_kemunculan_kata_pada_kalimat_jawaban_siswa"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_white"
                android:padding="@dimen/twelve_dp"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/twelve_dp"
                app:layout_constraintTop_toBottomOf="@id/layout_q"
                android:layout_marginTop="@dimen/twelve_dp"
                app:layout_constraintLeft_toLeftOf="@id/rv_word_list"
                app:layout_constraintRight_toRightOf="@id/rv_word_list"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:text="@string/setelah_memproyeksikan_kedua_teks_tersebut_maka_didapatkan_vektor_kedua_teks_yaitu"/>

                <TextView
                    android:id="@+id/tv_answer_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="Jawaban kamu"/>

                <TextView
                    android:id="@+id/tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="Kunci jawaban"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="@string/masing_masing_anggota_dari_vektor_q_dikalikan_dengan_masing_masing_anggota_dari_dari_vektor_d_dan_hasil_perkalian_tersebut_kemudian_dijumlahkan"/>

                <TextView
                    android:id="@+id/tv_step_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="1.1 + 2.2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="@string/anggota_dari_vektor_d_dikuadratkan_dan_dijumlahkan_kemudian_diakarkan"/>

                <TextView
                    android:id="@+id/tv_step_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="fasdfsadasdasdasd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="@string/anggota_dari_vektor_p_dikuadratkan_dan_dijumlahkan_kemudian_diakarkan"/>

                <TextView
                    android:id="@+id/tv_step_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="fasdfsadasdasdasd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="@string/hasil_yang_diperoleh_dari_langkah_1_dibagikan_dengan_hasil_dari_langkah_2_dan_3_yang_dikalikan_kemudian_hasil_tersebut_dikalikan"/>

                <TextView
                    android:id="@+id/tv_step_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="fasdfsadasdasdasd"/>

                <TextView
                    android:id="@+id/tv_step_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5"
                    android:layout_marginTop="@dimen/eight_dp"
                    tools:text="fasdfsadasdasdasd"/>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/h_medium2"
                    android:layout_marginTop="@dimen/eight_dp"
                    tools:text="fasdfsadasdasdasd"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_cousine"
                app:layout_constraintLeft_toLeftOf="@id/rv_word_list"
                android:padding="@dimen/twelve_dp"
                app:layout_constraintRight_toRightOf="@id/rv_word_list"
                android:background="@drawable/card_primary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="0.5"
                    android:text="@string/word_list"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="@id/tv_q"
                        app:layout_constraintRight_toRightOf="@id/tv_q"
                        app:layout_constraintTop_toTopOf="@id/tv_q"/>

                    <TextView
                        android:id="@+id/tv_q"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_weight="0.75"
                        android:textStyle="italic"
                        android:textSize="@dimen/h4"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="q"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="@id/tv_p"
                        app:layout_constraintRight_toRightOf="@id/tv_p"
                        app:layout_constraintTop_toTopOf="@id/tv_p"/>

                    <TextView
                        android:id="@+id/tv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_weight="0.75"
                        android:textStyle="italic"
                        android:textSize="@dimen/h4"
                        android:textAlignment="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="p"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</layout>
