<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/background_blue_gradient_chapter"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@color/baseWhiteTwo"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/twelve_dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_pattern"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintRight_toLeftOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_header"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_dont_have_chapter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_dont_have_course"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/tv_announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:text="Chapter"
            android:textColor="@color/white"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/ib_back"
            app:layout_constraintTop_toBottomOf="@id/ib_back" />

        <TextView
            android:id="@+id/tv_iv_dont_have_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twelve_dp"
            android:text="- There is no chapter in this course -"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/iv_dont_have_chapter"
            app:layout_constraintRight_toRightOf="@id/iv_dont_have_chapter"
            app:layout_constraintTop_toBottomOf="@id/iv_dont_have_chapter" />

        <View
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.20" />

        <View
            android:id="@+id/guideline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            app:layout_constraintTop_toBottomOf="@id/tv_announce" />

        <View
            android:id="@+id/guideline3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/guideline5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_dont_have_chapter"
            app:layout_constraintRight_toRightOf="@id/iv_dont_have_chapter"
            app:layout_constraintTop_toTopOf="@id/iv_dont_have_chapter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chapter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/twelve_dp"
            android:layout_marginRight="@dimen/twelve_dp"
            android:clipToPadding="false"
            android:paddingBottom="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline2"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_chapter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/twelve_dp"
            android:paddingTop="@dimen/twelve_dp"
            android:paddingRight="@dimen/twelve_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_layout_chapter_shimmer" />

                <include layout="@layout/item_layout_chapter_shimmer" />

                <include layout="@layout/item_layout_chapter_shimmer" />

                <include layout="@layout/item_layout_chapter_shimmer" />

                <include layout="@layout/item_layout_chapter_shimmer" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>