<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_blue_gradient"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="80dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/language"
                style="@style/spinnerTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/twelve_dp"
                android:backgroundTint="@color/white"
                android:popupBackground="@drawable/card_layout_white"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/profile_name_display"/>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/ic_pattern"
                android:tint="@color/white"
                app:layout_constraintRight_toRightOf="@id/guideline3"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/custom_progressbar"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/guideline2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_name_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/h_medium"
                app:layout_constraintBottom_toTopOf="@id/guideline2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hi, Customer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/twelve_dp"
                android:background="@drawable/card_layout_white"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="@dimen/twenty_dp"
                android:paddingBottom="@dimen/twelve_dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline2">

                <Button
                    android:id="@+id/btn_edit_password"
                    style="@style/NoCaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_white"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/sixteen_dp"
                    android:text="@string/change"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/layout_profile_password"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_profile_password" />

                <Button
                    android:id="@+id/btn_save_changes"
                    style="@style/NoCaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginRight="@dimen/twelve_dp"
                    android:background="@drawable/card_white"
                    android:enabled="false"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/save_changes"
                    android:textAlignment="center"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/h2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_password" />

                <Button
                    android:id="@+id/btnLogout"
                    style="@style/NoCaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginRight="@dimen/twelve_dp"
                    android:background="@drawable/card_white"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/logout"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/h2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_save_changes" />

                <TextView
                    android:id="@+id/email_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/email"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="@id/constraint_layout_profile"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_name" />

                <TextView
                    android:id="@+id/tv_email_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:layout_marginEnd="@dimen/twelve_dp"
                    android:gravity="end"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/if_you_change_your_email_you_will_logout_automatically"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/h_v_small"
                    app:layout_constraintRight_toRightOf="@id/constraint_layout_profile"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_email" />

                <TextView
                    android:id="@+id/password_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/password"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="@id/constraint_layout_profile"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_phone_number" />

                <TextView
                    android:id="@+id/profile_phone_number_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/phone"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="@id/constraint_layout_profile"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_warning" />

                <TextView
                    android:id="@+id/name_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twelve_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:paddingBottom="@dimen/four_dp"
                    android:text="@string/name"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintLeft_toLeftOf="@id/constraint_layout_profile"
                    app:layout_constraintTop_toTopOf="@id/constraint_layout_profile" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_profile_name"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="@string/digits"
                        android:inputType="textPersonName"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/darkGrey"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_profile_email"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/darkGrey"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_profile_phone_number"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_phone_number_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="@string/digits_number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/darkGrey"
                        android:textColorHint="@color/darkGrey"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_profile_password"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four_dp"
                    android:layout_marginEnd="@dimen/twelve_dp"
                    android:background="@drawable/card_white"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:paddingEnd="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/twelve_dp"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toStartOf="@+id/btn_edit_password"
                    app:layout_constraintRight_toLeftOf="@id/btn_edit_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/password_tag">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:digits="@string/digits_number"
                        android:enabled="false"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/h3" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>